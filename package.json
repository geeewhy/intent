{
  "name": "kitchen-eats-backend",
  "version": "1.0.0",
  "description": "Intent, Event-sourced Execution Model backends with hexagonal architecture",
  "main": "dist/index.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:worker": "node dist/worker.js",
    "start:command-pump": "node dist/infra/pg/command-pump.js",
    "start:cmdline": "node dist/client/cmdline/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:worker": "ts-node-dev --respawn --transpile-only src/worker.ts",
    "dev:command-pump": "ts-node-dev --respawn --transpile-only src/infra/pump/command-pump.ts",
    "dev:event-pump": "ts-node-dev --respawn --transpile-only src/infra/pump/event-pump.ts",
    "dev:cmdline": "ts-node src/client/cmdline/index.ts",
    "test": "jest",
    "test:core": "jest --selectProjects core",
    "test:integration": "jest --selectProjects integration",
    "projections:migrate": "ts-node src/infra/projections/migrations-pg/cli.ts",
    "lint:rls": "ts-node src/tools/lint-rls-policies.ts",
    "tool:projection-check-drift": "ts-node src/tools/check-projection-drift.ts",
    "tool:projection-repair": "ts-node src/tools/repair-projection-drift.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@temporalio/activity": "^1.7.4",
    "@temporalio/client": "^1.7.4",
    "@temporalio/proto": "^1.11.7",
    "@temporalio/worker": "^1.7.4",
    "@temporalio/workflow": "^1.7.4",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.31.0",
    "drizzle-orm": "^0.43.1",
    "express": "^4.18.2",
    "glob": "^11.0.2",
    "pg": "^8.7.3",
    "pg-query-stream": "^4.10.0",
    "slonik": "^29.2.0",
    "umzug": "^3.8.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/minimist": "^1.2.5",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "minimist": "^1.2.8",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
